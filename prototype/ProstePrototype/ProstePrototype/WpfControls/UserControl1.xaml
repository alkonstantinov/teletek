<UserControl x:Class="ProstePrototype.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProstePrototype"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="400"
             xmlns:uc="clr-namespace:ProstePrototype.WpfControls">
    <StackPanel Margin="30">
        <uc:WPFIPInput x:Name="txtHostIp" 
                       Label="{DynamicResource ScanMenuHostIp}" LabelFontSize="18"
                       Width="300" Height="40" HorizontalAlignment="Left"
                       Margin="10" />

        <uc:WPFNumericInput x:Name="txtPort" Label="{DynamicResource ScanMenuPort}" LabelFontSize="18" 
                            Width="300" Height="40" HorizontalAlignment="Left"
                            Margin="10" />
    </StackPanel>
</UserControl>
